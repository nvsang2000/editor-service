    "pdfmake": "^0.2.20"
  },
  "packageManager": "bun@1.2.0",
  "engines": {
    "node": ">=18",
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@types/html-minifier": "^4.0.5",
    "@types/html-to-pdfmake": "^2.4.4",
